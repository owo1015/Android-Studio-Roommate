<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/calendar_item_day"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:fontFamily="@font/im_hyemin"
        android:text="1"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:gravity="bottom">

        <TextView
            android:id="@+id/schedule1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:fontFamily="@font/im_hyemin"
            android:background="#C5E0B4"
            android:text="일정"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/schedule2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="0.5dp"
            android:fontFamily="@font/im_hyemin"
            android:background="#C5E0B4"
            android:text="일정"
            android:textSize="12sp"
            android:maxLines="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/schedule3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:fontFamily="@font/im_hyemin"
            android:background="#C5E0B4"
            android:text="일정"
            android:textSize="12sp"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>