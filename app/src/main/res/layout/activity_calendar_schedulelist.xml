<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/im_hyemin"
        android:text="일정 제목"
        android:textSize="25sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_schedule_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/im_hyemin"
            android:text="X월 X일"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/im_hyemin"
            android:text="XX시 XX분"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_schedule_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/im_hyemin"
        android:text="일정 추가 메모"
        android:textSize="20sp" />

</LinearLayout>